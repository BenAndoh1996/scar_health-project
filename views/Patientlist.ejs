<body id="page-top">

  <nav class="navbar navbar-expand navbar-dark bg-dark static-top">

    <a class="navbar-brand mr-1" href="">SCAR-HEALTH</a>

    <button class="btn btn-link btn-sm text-white order-1 order-sm-0" id="sidebarToggle" href="#">
      <i class="fas fa-bars"></i>
    </button>
  </nav>

  <div id="wrapper">

    <!-- Sidebar -->
    <ul class="sidebar navbar-nav">
      <li class="nav-item">
        <a class="nav-link" href="/dashboard">
          <i class="fas fa-fw fa-home"></i>
          <span>Dashboard</span>
        </a>
      </li>
      <li class="nav-item active">
        <a class="nav-link" href="/users/logout">
          <i class="fas fa-fw fa-bell"></i>
          <span>LogOut</span></a>
      </li>
    </ul>

    <div id="content-wrapper">

      <div class="container-fluid">

        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
        
          <div class="mySearch-group">
            <div class="my-searchOne">
              Monthly Check Search
               <form class="d-none d-md-inline-block form-inline ml-auto mr-0 mr-md-3 my-2 my-md-0" method="POST" action="/dashboard/Monthregister">
                <div class="input-group">
                  <input type="month" class="form-control" placeholder="Search for ID..." name="search"  aria-label="search" aria-describedby="basic-addon2">
                  <div class="input-group-append">
                    <button class="btn btn-primary" type="submit">
                      <i class="fas fa-search"></i>
                    </button>
                  </div>
              </form>
             </div>
            <!-- Navbar Search -->
             <div class="my-search">
               Daily Check Search 
                <form class="d-none d-md-inline-block form-inline ml-auto mr-0 mr-md-3 my-2 my-md-0" method="POST" action="/dashboard/Dayregister">
                    <div class="input-group">
                      <input type="date" class="form-control" placeholder="Search for ID..." name="search"  aria-label="search" aria-describedby="basic-addon2">
                      <div class="input-group-append">
                        <button class="btn btn-primary" type="submit">
                          <i class="fas fa-search"></i>
                        </button>
                      </div>
                    </div>
                  </form>
              </div>
          </div>
        </ol>

        <!-- DataTables  Content -->
        <div class="">   
          

           <h4 style="text-align: center;"> <b>List of registered patients of the hospital and are still users of the facility</b> </h4>
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                <thead>
                  <tr>
                    <th>Full Name</th>
                    <th> Patient ID Number</th>
                    <th> Patient's Address</th>
                    <th>Telephone</th>
                    <th>Age</th>
                    <th>Date Of Birth</th>
                    <th>Take Action</th>
                     
                  </tr>
                </thead>
                
                <tbody>
                    <%if(Patients.length > 0){ %>
                        <% Patients.forEach(function(row){%>
                          <tr>
                            <td><%= row.Full_Name %></td>
                            <td><%= row.Patient_ID_Number %></td>
                            <td><%= row.Address  %></td>
                            <td><%= row.Telephone %></td>
                            <td><%= row.Age %></td>
                            <td><%= row.birth_date %></td>
                            <td class="text-center">
                                <button type="button" class="btn btn-info btn lg" data-toggle="modal" data-target="#myModal">Action</button>
                            </td>
                            
                        <%});%>
                      <%}else{%>
                            <tr>
                                <td colspan="6"> No Record Found </td>
                            </tr>
                        <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
          <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
        </div>

        <div id="myModal" class="modal fade" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header text-center">
                        
                        <button type="button" class="close" data-dismiss="modal" aria-label="close" >
                            <span aria-hidden="true">&times;</span>
                            </button>
                      
                        <div class="modal-body">
                          <h4 style="color: darkred;"><b>WHAT DO YOU WANT TO DO ?</b></h4> <br>
                      
                          <div id="createlink"> <p><b> 1. CREATE NEW MEDICAL RECORDS FOR PATIENT</b></p></div>
                          <div id="requestlink"> <p><b>2. REQUEST NEW LAB FOR PATIENT</a></b></div>
                            <div id="medlink"> <p><b>3. VIEW PREVIOUS MEDICAL RECORDS OF PATIENT</a></b></div>
                              <div id="lablink"> <p><b>4. VIEW PREVIOUS LAB RECORDS OF PATIENT</a></b></div>
                               <div id="appiontmentlink"> <p><b>5. SCHEDULE AND APPOINTMENT </a></b></div>
                               <div id="billlink"> <p><b>6. TAKE BILLS FOR THIS PATIENT</b></div> 
                                <div id="druglink"> <p><b>6. PRESCRIBE MEDICATION FOR THIS PATIENT</b></div> 
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
      <!-- /.container-fluid -->

      <!-- Sticky Footer -->
      <footer class="sticky-footer">
        <div class="container my-auto">
          <div class="copyright text-center my-auto">
            <span>Copyright © SCAR-HEALTH 2019</span>
          </div>
        </div>
      </footer>

    </div>
