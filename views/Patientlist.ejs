  <!-- Logout Modal-->
  <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
          <button class="close" type="button" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
          </button>
        </div>
        <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
        <div class="modal-footer">
          <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
          <a class="btn btn-primary" href="login.html">Logout</a>
        </div>
      </div>
    </div>
  </div>
  <script>
      
    var index, table = document.getElementById('dataTable');
    var tablelike = document.getElementById('tablelike')

    var createlink = document.getElementById('createlink');
    var requestlink = document.getElementById('requestlink')
    var medlink = document.getElementById('medlink');
    var lablink = document.getElementById('lablink')
    var appiontmentlink = document.getElementById('appiontmentlink');
    var billlink = document.getElementById('billlink')
    var druglink = document.getElementById('druglink')
    
     for(var i = 1; i < table.rows.length; i++){
        var patientName, patientID
        table.rows[i].onclick= function(){
            index = this.parentElement.rowIndex;
             
              patientName = this.cells[0].innerHTML;
              patientID = this.cells[1].innerHTML; 
            };

        table.rows[i].onclick =function(){

          index = this.parentElement.rowIndex;
              var  Name = this.cells[0].innerHTML;
              var  PatientId= this.cells[1].innerHTML; 
              var  Address = this.cells[2].innerHTML;
              var   birthdate= this.cells[5].innerHTML; 
              var  Telephone = this.cells[3].innerHTML;
              var   PatientAge= this.cells[4].innerHTML; 
              var date = birthdate.replace(/\//g, "-")
              console.log(date)
              
              createlink.onclick =function(){
                var c = confirm('Do you want create new medical for this patient?');
                if(c === true){
                  var INFO = {Name:Name, patientID:PatientId,Address:Address,PatientAge:PatientAge, Telephone:Telephone,birthdate:date}
                   Infostring = JSON.stringify(INFO)
                  window.document.location = '/dashboard/MedicalForm'+ Infostring
                 }
              };
             
              requestlink.onclick =function(){
                var c = confirm('Do you want create new request new lab for this patient?');
                if(c === true){
                  var INFO = {Name:Name, patientID:PatientId,Address:Address,PatientAge:PatientAge, Telephone:Telephone,birthdate:date}
                   Infostring = JSON.stringify(INFO)
                  window.document.location = '/dashboard/LabRequest'+ Infostring
                 }
              }
              
              requestlink.onclick =function(){
                var c = confirm('Do you want create new request new lab for this patient?');
                if(c === true){
                  var INFO = {Name:Name, patientID:PatientId,Address:Address,PatientAge:PatientAge, Telephone:Telephone,birthdate:date}
                   Infostring = JSON.stringify(INFO)
                  window.document.location = '/dashboard/LabRequest'+ Infostring
                 }
              }

              medlink.onclick =function(){
                var c = confirm('Do you want create View Medical Records Of this patient?');
                if(c === true){
                  var INFO = {Name:Name, patientID:PatientId,Address:Address,PatientAge:PatientAge, Telephone:Telephone,birthdate:date}
                   Infostring = JSON.stringify(INFO)
                  window.document.location = '/dashboard/MedicalReport'+ Infostring
                 }
              }

              lablink.onclick =function(){
                var c = confirm('Do you want create View Laboratory Records Of this patient?');
                if(c === true){
                  var INFO = {Name:Name, patientID:PatientId,Address:Address,PatientAge:PatientAge, Telephone:Telephone,birthdate:date}
                   Infostring = JSON.stringify(INFO)
                  window.document.location = '/dashboard/LabRecord'+ Infostring
                 }
              }

              appiontmentlink.onclick =function(){
                var c = confirm('Do you want Schedule Appointment with this Patient?');
                if(c === true){
                  var INFO = {Name:Name, patientID:PatientId,Address:Address,PatientAge:PatientAge, Telephone:Telephone,birthdate:date}
                   Infostring = JSON.stringify(INFO)
                  window.document.location = '/dashboard/Appointment'+ Infostring
                 }
              }

              billlink.onclick =function(){
                var c = confirm('Do you want Enter Bills for this Patient?');
                if(c === true){
                  var INFO = {Name:Name, patientID:PatientId,Address:Address,PatientAge:PatientAge, Telephone:Telephone,birthdate:date}
                   Infostring = JSON.stringify(INFO)
                  window.document.location = '/dashboard/DocBilling'+ Infostring
                 }
              }

              druglink.onclick =function(){
                var c = confirm('Do you want Prescribe Medication for this Patient?');
                if(c === true){
                  var INFO = {Name:Name, patientID:PatientId,Address:Address,PatientAge:PatientAge, Telephone:Telephone,birthdate:date}
                   Infostring = JSON.stringify(INFO)
                  window.document.location = '/dashboard/Prescriptions'+ Infostring
                 }
              }

        }
}  
</script>


