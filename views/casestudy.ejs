    <div id="content-wrapper">

      <div class="container-fluid">

        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
          <li class="breadcrumb-item">
            <a href="#">Dashboard</a>
          </li>
          <li class="breadcrumb-item active"> Patients Database list</li>
          
        </ol>

        <!-- DataTables  Content -->
        <div class="card mb-3">

          <div class="card-header">
            <i class="fas fa-user"></i>
            Patients Database List  
           <button type="button" class="btn-sm active btn-primary">Add new Patient</button>
            <button type="button" class="btn-sm active btn-danger">Delete Patient</button>
            <button type="button" class="btn-sm active btn-dark">Request Doctors Appointment</button>
            
           </div>      
           </div>

          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <% include ./partials/cases %>
            </table>
            </div>
            <div class="container">
                <div class="card card-register mx-auto mt-5">
                  <div class="card-header">PATIENT CASE PERFORMANCE FORM (ADMITTED PATIENT ONLY)</div>
                  
                  <div class="card-body">
                    <% include ./partials/messages %>
                    <form  id="myForms" method="post" action="/dashboard/IPDForm" >
                      <div class="form-group">
                        <div class="form-row">
                          <div class="col-md-6">
                            <div class="form-label-group">
                              <input type="text" id="firstName" class="form-control" placeholder="Patient Name" required="required" name="Patients_Name" autofocus="autofocus" >
                              <label for="firstName">Patients Full Name</label>
                            </div>
                          </div>
                          <div class="col-md-6">
                            <div class="form-label-group">
                              <input type="text" id="lastName" class="form-control" placeholder="Patient ID" name="Patient_ID" required="required" >
                              <label for="lastName">Patient (ID)</label>
                            </div>
                          </div>
                        </div>
                      </div>
                      <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-6">
                        <div class="form-label-group">
                          <input type="text" id="inputEmail" class="form-control" placeholder="Temperature" name="Temperature" >
                          <label for="inputEmail">Temperature Level(TL)</label>
                        </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-label-group">
                              <input type="text" id="password" class="form-control" placeholder=" Sugar_Level  " name="Blood_Level"  >
                              <label for="password">Blood Level(BP)</label>
                            </div>
                          </div>
                      </div>
                      </div>
                      <div class="form-group">
                        <div class="form-row">
                          <div class="col-md-6">
                            <div class="form-label-group">
                              <input type="text" id="inputPassword" class="form-control" placeholder=" Sugar_Level  " name="Sugar_Level"  >
                              <label for="inputPassword">Sugar Level(SL)</label>
                            </div>
                          </div>
                          <div class="col-md-6">
                            <div class="form-label-group">
                              <input type="text" id="confirmPassword" class="form-control" placeholder="Pulse_Rate" name="Pulse_Rate"  >
                              <label for="confirmPassword">Pulse Rate(BP/mm)</label>
                            </div>
                          </div>
                        </div>

                      </div>
                      <div class="form-group">
                        <label for="comment">Patient Current State</label>
                        <textarea class="form-control" rows="4" cols="40" name="Current_State" id="comment" > </textarea>
                      </div>

                      <div class="form-group">
                        <label for="comment">Observations And Treatment Response</label>
                        <textarea class="form-control" rows="4" cols="40" name="Observations" id="comment" > </textarea>
                      </div>

                      <div class="form-group">
                        <label for="comment">Any Additional Information</label>
                        <textarea class="form-control" rows="4" cols="30" name="Adittional_Info" id="comment" > </textarea>
                      </div>


                      <button type="submit" class="btn btn-primary btn-block" >Add To Database</button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
        </div>

        

