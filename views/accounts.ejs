    <div class="table-responsive">
      <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th> Patient Name</th>
            <th>Patient ID</th>
            <th>Transaction ID</th>
