  <div class="card mb-3">
      <div class="card-header">
        <i class="fas fa-user"></i>
        ACCOUNT SECTION        
        <a href="/dashboard/newadischargeview" class="btn btn-secondary btn lg" role="button" aria-pressed="true"><b> DISCHARGED PATIENTS BILLS</b></a>
        <button type="button" class="btn btn-info btn lg" data-toggle="modal" data-target="#myModal"><b>GENERATE RECEIPTS</b></button>
       
