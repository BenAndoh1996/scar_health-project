   <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th> Patient Name</th>
            <th>Patient ID</th>
            <th>Transaction ID</th>
            <th>Billed By</th>
            <th>Date</th>
            <th> Department</th>  
            <th> Bill (One)</th>
            <th> Purpose</th>
            <th>Bill (Two)</th>
            <th> Purpose</th>
            <th>Bill(Three</th>
            <th>Purpose</th>
            <th>Total Bill</th>  
            <th>Take Action </th>

           </thead>        
         <tbody>
          <%if(Getbill.length > 0){ %>
            <% Getbill.forEach(function(row){%>
              <tr>
                <td><%= row.Patients_Name %></td>
                <td><%= row.Patient_ID %></td>
                <td><%= row._id %></td>
                <td><%= row.Doctor_Name %></td>
                <td><%= row.String_Date %></td>
                <td><%= row.Department %></td>
                <td><%= row.Billing_One %></td>
                <td><%= row.Purpose_One%></td> 
                <td><%= row.Billing_Two %></td>
                <td><%= row.Purpose_Two %></td> 
                <td><%= row.Billing_Three %></td> 
                <td><%= row.Purpose_Three %></td>  
                <td><%= row.Total %></td> 
                <td class="float-right">
                  <button class="btn btn-danger badge-pill">Remove</button>
              </td> 
              </tr>
            <%});%>
          <%}else{%>
                <tr>
                    <td colspan="6"> No Record Found </td>
                </tr>
            <% } %>
        </tbody>
       </table>
    </div>
   </div>

   <div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header text-center">
                
                <button type="button" class="close" data-dismiss="modal" aria-label="close" >
                    <span aria-hidden="true">&times;</span>
                    </button>
              
                <div class="modal-body">
                   
                    <h4>Receipt Generation Form</h4> <br>
                    <form  id="myForms" method="post" action="/dashboard/GenerateReceipt" >
                      <div class="form-group">
                        <div class="form-row">
                          <div class="col-md-6">
                            <div class="form-label-group">
                              <input type="text" id="firstName" class="form-control" placeholder="Name of Patient" required="required" name="Name" autofocus="autofocus" >
                              <label for="firstName">Name of Patient</label>
                            </div>
                          </div>
                          <div class="col-md-6">
                            <div class="form-label-group">
                              <input type="text" id="lastName" class="form-control" placeholder="Patient ID" name="UserName" required="required" >
                              <label for="lastName">Patient ID</label>
                            </div>
                          </div>
                        </div>
                      </div>

                      <div class="form-group">
                        <div class="form-row">
                          <div class="col-md-6">
                            <div class="form-label-group">
                              <input type="number" id="AmountOne" class="form-control" placeholder="Bill One" required="required" name="Billing_One" autofocus="autofocus" >
                              <label for="AmountOne">Billing One</label>
                            </div>
                          </div>
                          <div class="col-md-6">
                            <div class="form-label-group">
                              <input type="text" id="BillOne" class="form-control" placeholder="Bill One Purpose" name="Billing_One_Purpose"  >
                              <label for="BillOne">Billing One Purpose</label>
                            </div>
                          </div>
                        </div>
                      </div>
                     
                       <div class="form-group">
                        <div class="form-row">
                          <div class="col-md-6">
                            <div class="form-label-group">
                              <input type="number" id="Amount" class="form-control" placeholder="Bill Two" name="Billing_Two" autofocus="autofocus" >
                              <label for="Amount">Billing Two</label>
                            </div>
                          </div>
                          <div class="col-md-6">
                            <div class="form-label-group">
                              <input type="text" id="BillTwo" class="form-control" placeholder="Billing Two Purpose" name="Billing_Two_Purpose" required="required" >
                              <label for="BillTwo">Billing Two Purpose</label>
                            </div>
                          </div>
                        </div>
                      </div>
            
                      <div class="form-group">
                        <div class="form-row">
                          <div class="col-md-6">
                            <div class="form-label-group">
                              <input type="number" id="Bill" class="form-control" placeholder="Billing Three  " name="Billing_Three"   >
                              <label for="Bill">Billing Three</label>
                            </div>
                          </div>
                          <div class="col-md-6">
                            <div class="form-label-group">
                              <input type="" id="BillThree" class="form-control" placeholder="Billing Three Purpose" name="Billing_Three_Purpose"  >
                              <label for="BillThree">Billing Three Purpose</label>
                            </div>
                          </div>
                        </div>
                      </div>
                      <button type="submit" class="btn btn-primary btn-block" >Generate Receipt</button>
                    </form>
                     
