            <% Getbill.forEach(function(row){%>
              <tr>
                <td><%= row.Patients_Name %></td>
                <td><%= row.Patient_ID %></td>
                <td><%= row._id %></td>
                <td><%= row.Doctor_Name %></td>
                <td><%= row.String_Date %></td>
                <td><%= row.Department %></td>
                <td><%= row.Billing_One %></td>
                <td><%= row.Purpose_One%></td> 
                <td><%= row.Billing_Two %></td>
                <td><%= row.Purpose_Two %></td> 
                <td><%= row.Billing_Three %></td> 
                <td><%= row.Purpose_Three %></td>  
                <td><%= row.Total %></td> 
                <td class="float-right">
                  <button class="btn btn-danger badge-pill">Remove</button>
              </td> 
              </tr>
            <%});%>
          <%}else{%>
                <tr>
                    <td colspan="6"> No Record Found </td>
                </tr>
